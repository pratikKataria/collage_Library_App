<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="cardViewStyle">@style/CardViewCustomStyle</item>
    </style>

    <style name="TextViewMidStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="fontFamily">@font/brandon_med</item>
    </style>

    <style name="EditTextStyle">
        <item name="background">@drawable/bg_edit_text</item>
        <item name="fontFamily">@font/brandon_reg</item>
        <item name="android:padding">@dimen/editTextPadding</item>
        <item name="android:textCursorDrawable">@android:color/black</item>
    </style>

    <style name="Widget.MaterialBtn" parent="Widget.MaterialComponents.Button">
        <item name="fontFamily">@font/brandon_bld</item>
        <item name="android:padding">@dimen/editTextPadding</item>
        <item name="backgroundTint">@color/button_state</item>
        <item name="android:textColor">@color/text_state</item>
    </style>

    <style name="Widget.MaterialBtn.Outline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="fontFamily">@font/brandon_bld</item>
        <item name="android:padding">@dimen/editTextPadding</item>
        <item name="strokeColor">@color/button_state</item>
        <item name="rippleColor">@color/colorGray50</item>
        <item name="backgroundTint">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="CardViewCustomStyle">
        <item name="android:foreground">@drawable/selectable_item_background</item>
        <item name="cornerRadius">@dimen/cornerRadius</item>
        <item name="elevation">0dp</item>
        <item name="android:clickable">true</item>
        <item name="android:stateListAnimator">@animator/card_animator</item>
    </style>

    <style name="timeTextview" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/brandon_med</item>
    </style>
</resources>
